<span id="<%= aya_id %>" class="aya">
            <span class="aya-wrapper" style="background-color: transparent;">
                <span class="ayaText">
                  <!--<%= aya['text'] %>-->
                  <% aya['text'].split(/\s+/).each_with_index do |word, windex| %>
                      <% word_id = aya_id.to_s + '-' + windex.to_s %>
                      <%= render partial: "word", locals: {word: word, id: word_id} %>
                  <% end %>
                </span>
                <span class="ayaNumber" style="font-size: 0.92em;">﴿<a href="http://tanzil.net/#19:2"><%= aya['index'] %></a>﴾</span>
    </span>
</span>